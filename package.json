{
  "name": "knowledge-wiki",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node -e \"const fs=require('fs');const r=JSON.parse(fs.readFileSync('dist/_routes.json','utf8'));r.exclude=['/static/*','/favicon.svg'];fs.writeFileSync('dist/_routes.json',JSON.stringify(r));\"",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist",
    "dev:sandbox": "wrangler pages dev dist --d1=knowledge-wiki-db --local --ip 0.0.0.0 --port 3000",
    "db:migrate:local": "wrangler d1 migrations apply knowledge-wiki-db --local",
    "db:seed": "curl -X POST http://localhost:3000/api/seed",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local"
  },
  "dependencies": {
    "hono": "^4.12.0"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
